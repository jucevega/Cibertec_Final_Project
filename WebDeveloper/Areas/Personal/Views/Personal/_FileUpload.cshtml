<h3>Basic File Upload</h3>

<form id="uploadForm" method="post" action="" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-8">
                <label class="btn btn-default btn-file">
                    Browse <input type="file" id="file" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <div class="col-md-offset-2 col-md-8">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button class="btn btn-default" type="submit" onclick="upload(); return false;">Upload File</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    function upload() {
        var formData = new FormData();
        formData.append("file", $("#file")[0].files[0]);
        $.ajax({
            async: true,
            type: 'POST',
            url: '@Url.Action("UploadFile", new {controller="Personal", area = "Personal" })',
            data: formData,
            success: closeModal,
            cache: false,
            contentType: false,
            processData: false
        });
    }
</script>
